<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="controller"
            type="ru.xfit.screens.schedule.MyScheduleController" />

        <import type="ru.xfit.R" />

        <import type="ru.xfit.misc.LayoutManagers" />

    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:clipChildren="false">

                <RelativeLayout
                    android:id="@+id/calendar_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="4dp"
                    android:background="@android:color/white">

                    <com.molo17.customizablecalendar.library.components.CustomizableCalendar
                        android:id="@+id/calendar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:highlightedDays="@{controller.classDates}"
                        app:initCalendarSchedule="@{controller}"
                        app:layout="@layout/c_calendar"
                        app:multipleSelect="@{false}"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/calendar_container">

                    <ru.xfit.misc.views.HackyRecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="@{!controller.scheduleEmpty}"
                        app:adapter="@{controller.adapter}"
                        app:layoutManager="@{LayoutManagers.LINEAR_VERTICAL}" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="@string/my_schedule_no_schedule"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:visibility='@{controller.scheduleEmpty}' />
                </RelativeLayout>

            </RelativeLayout>
        </android.support.v4.widget.NestedScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/classes_btn"
                android:layout_width="328dp"
                android:layout_height="48dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button_bg"
                android:fontFamily="sans-serif"
                android:onClick='@{controller.showClubClassesController}'
                android:text="@string/my_schedule_classes"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:visibility='@{controller.scheduleEmpty}' />

            <!--<Button-->
            <!--android:id="@+id/services_btn"-->
            <!--android:layout_width="328dp"-->
            <!--android:layout_height="48dp"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_marginTop="16dp"-->
            <!--android:background="@drawable/button_bg"-->
            <!--android:fontFamily="sans-serif"-->
            <!--android:text="@string/my_schedule_services"-->
            <!--android:textColor="@android:color/white"-->
            <!--android:textSize="18sp"-->
            <!--android:visibility='@{controller.adapter.itemCount == 0}'-->
            <!--android:onClick='@{controller.services}'-->
            <!--android:layout_below="@+id/classes_btn"/>-->

        </RelativeLayout>

        <include
            layout="@layout/progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@{R.color.loaderBackground}"
            android:indeterminateTint="@{R.color.controlsColor}"
            app:visibility="@{controller.progress}" />
    </RelativeLayout>

</layout>