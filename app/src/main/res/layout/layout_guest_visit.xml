<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="controller"
            type="ru.xfit.screens.clubs.guest_visit.GuestVisitController" />

        <import type="ru.xfit.R" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:title="@{controller.title}"
            app:navigationClickListener="@{controller}"
            app:showBackButton="@{controller.previous != null}" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar">

            <RelativeLayout
                android:id="@+id/dropdown_rl"
                clubItems="@{controller.clubs}"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@android:color/white"
                android:elevation="1dp">

                <ru.xfit.misc.views.MyAutoCompleteText
                    android:id="@+id/club"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@android:color/transparent"
                    android:dropDownAnchor="@id/dropdown_rl"
                    android:dropDownWidth="match_parent"
                    android:fontFamily="sans-serif"
                    android:hint="@string/call_me_select_club"
                    android:text="@={controller.selectedClub}"
                    android:textColor="@color/slate_grey"
                    android:textSize="16sp"
                    android:textStyle="normal" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/name_rl"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_below="@id/dropdown_rl"
                android:layout_marginTop="1dp"
                android:background="@android:color/white"
                android:elevation="1dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="sans-serif"
                    android:text="@{controller.name}"
                    android:textColor="@color/slate_grey"
                    android:textSize="16sp"
                    android:textStyle="normal" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/phone_rl"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_below="@+id/name_rl"
                android:layout_marginTop="1dp"
                android:background="@android:color/white"
                android:elevation="1dp">

                <com.github.reinaldoarrosi.maskededittext.MaskedEditText
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="sans-serif"
                    android:imeOptions="actionDone"
                    android:inputType="number|phone"
                    android:maxLines="1"
                    android:textColor="@color/slate_grey"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    app:digitMaskedKeyboard="@{true}"
                    app:mask="+7(999) 999-99-99"
                    app:onMaskedTextChanged='@{controller.phone}'
                    app:placeholder="_"
                    app:preloadPhone="@{controller.phone}" />

            </RelativeLayout>

            <Button
                android:id="@+id/login_btn"
                android:layout_width="328dp"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_bg"
                android:fontFamily="sans-serif"
                android:foreground="?attr/selectableItemBackground"
                android:onClick='@{controller::requestGuestVisit}'
                android:text="@string/club_order_guest_visit"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

        </RelativeLayout>

        <include
            layout="@layout/progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@{R.color.loaderBackground}"
            android:indeterminateTint="@{R.color.controlsColor}"
            app:visibility="@{controller.progress}" />

    </RelativeLayout>

</layout>