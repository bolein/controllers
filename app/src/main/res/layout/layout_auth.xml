<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="controller"
            type="ru.xfit.screens.auth.AuthController" />

    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ff202020"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="300dp"
            android:layout_height="152dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp" />

        <RelativeLayout
            android:id="@+id/phone_rl"
            android:layout_width="328dp"
            android:layout_height="48dp"
            android:layout_below="@+id/logo"
            android:layout_marginLeft="16dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp">

            <ImageView
                android:id="@+id/phone_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:background="@drawable/ic_phone" />

            <com.github.reinaldoarrosi.maskededittext.MaskedEditText
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="17dp"
                android:layout_toRightOf="@+id/phone_icon"
                android:background="@android:color/transparent"
                android:fontFamily="sans-serif"
                android:textColor="@android:color/white"
                android:textSize="17sp"
                app:mask="+7(___) ___-__-__"
                app:placeholder="_" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/phone"
                android:layout_marginTop="9dp"
                android:background="@color/colorAccent" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/pass_rl"
            android:layout_width="328dp"
            android:layout_height="48dp"
            android:layout_below="@+id/phone_rl"
            android:layout_marginLeft="16dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp">

            <ImageView
                android:id="@+id/pass_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:background="@drawable/ic_lock_outline" />

            <EditText
                android:id="@+id/password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="17dp"
                android:layout_toRightOf="@+id/pass_icon"
                android:background="@android:color/transparent"
                android:fontFamily="sans-serif"
                android:hint="@string/auth_passwd_hint"
                android:inputType="numberPassword"
                android:textColor="@android:color/white"
                android:textColorHint="@color/textHintColor"
                android:textSize="17sp" />

            <View
                android:id="@+id/password_underline"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/password"
                android:layout_marginTop="9dp"
                android:background="@android:color/white" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="328dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:visibility="gone"
            android:layout_below="@+id/pass_rl" >
            <TextView
                android:id="@+id/password_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Неверный пароль"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:textColor="@color/reportProblem"
                android:layout_alignParentLeft="true"/>

            <ImageView
                android:layout_width="17dp"
                android:layout_height="15dp"
                android:background="@drawable/ic_report_problem"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <Button
            android:id="@+id/login_btn"
            android:layout_width="328dp"
            android:layout_height="48dp"
            android:layout_below="@+id/pass_rl"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:background="@drawable/button_bg"
            android:fontFamily="sans-serif"
            android:text="@string/auth_login"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/reset_passwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:layout_below="@+id/login_btn"
            android:text="@string/auth_reset_pwd"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="23dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/registration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:layout_below="@+id/reset_passwd"
            android:text="@string/auth_registration"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:textStyle="normal" />

    </RelativeLayout>
</layout>