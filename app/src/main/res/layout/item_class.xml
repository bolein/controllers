<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="ru.xfit.screens.schedule.ClassVM"/>

        <import type="android.graphics.Color"/>
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:onClick="@{viewModel.onItemClick}">
        <RelativeLayout
            android:id="@+id/caption"
            android:layout_width="64dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/whats_time_is_it"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textColor="@color/calendarWeekend"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp"
                android:text="@{viewModel.getTime()}"
                />

            <ImageView
                android:id="@+id/personal_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:visibility='gone'
                android:layout_below="@+id/whats_time_is_it"/>

            <ImageView
                android:id="@+id/group_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ic_group_black"
                android:layout_below="@+id/whats_time_is_it"/>

            <LinearLayout
                android:layout_below="@+id/group_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/commercial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_bucks"
                    android:visibility='@{viewModel.clazz.commercial}'
                    android:layout_gravity="center" />

                <ImageView
                    android:id="@+id/popular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_like"
                    android:layout_marginLeft="20dp"
                    android:visibility='@{viewModel.clazz.popular}'
                    android:layout_gravity="center" />

            </LinearLayout>

        </RelativeLayout>
        
        <View
            android:id="@+id/delimeter"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/caption"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:setColor="@{viewModel.getColor()}"/>

        <RelativeLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/delimeter">
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textColor="@color/calendarWeekend"
                android:layout_marginTop="18dp"
                android:text="@{viewModel.clazz.activity.title}"
                />
            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="sans-serif-light"
                android:textStyle="normal"
                android:textColor="@color/calendarWeekend"
                android:layout_below="@+id/title"
                android:text="@{viewModel.getDescription()}"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="34dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:visibility='@{viewModel.clazz.isNew}'>
                <ImageView
                    android:id="@+id/label_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/schedule_label_new"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_centerInParent="true"
                    android:textStyle="normal"
                    android:textColor="#fff"
                    android:text="NEW"/>

            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</layout>