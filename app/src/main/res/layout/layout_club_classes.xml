<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="controller"
            type="ru.xfit.screens.schedule.ClubClassesController" />

    </data>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/spacer"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            />

        <RelativeLayout
            android:id="@+id/calendar_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spacer"
            android:background="@android:color/white"
            android:elevation="4dp">

            <com.molo17.customizablecalendar.library.components.CustomizableCalendar
                android:id="@+id/calendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:initCalendarSchedule="@{controller}"
                app:layout="@layout/c_calendar"
                app:month_view="false"
                app:show_subview="false"
                app:multipleSelect="@{false}"/>
        </RelativeLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/calendar_container">

            <RelativeLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:clipChildren="false">

                <include
                    android:id="@+id/list"
                    layout="@layout/list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:adapter='@{controller.adapter}' />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="@string/my_schedule_no_schedule"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:visibility='@{controller.adapter.itemCount == 0}' />

            </RelativeLayout>

        </android.support.v4.widget.NestedScrollView>

    </RelativeLayout>
</layout>