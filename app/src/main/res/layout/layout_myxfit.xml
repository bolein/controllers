<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="controller"
            type="ru.xfit.screens.xfit.MyXfitController" />

        <import type="ru.xfit.R" />

        <import type="ru.xfit.misc.LayoutManagers" />

    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/spacer"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spacer"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="4sp"
            android:text="@{controller.info}"
            android:textAlignment="center"
            android:textColor="@color/calendarCommonDay"
            android:textSize="14sp"
            android:textStyle="normal"
            android:visibility="@{controller.contract == null}"
            />

        <TextView
            android:id="@+id/contract_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spacer"
            android:layout_centerHorizontal="true"
            android:text="@{controller.contract.number}"
            android:textColor="#4b0887"
            android:textSize="36sp"
            />

        <TextView
            android:id="@+id/contract_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contract_number"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif"
            android:text="@{controller.contract.description}"
            android:textAlignment="center"
            android:textColor="@color/calendarCommonDay"
            android:textSize="17sp"
            android:textStyle="normal"
            android:visibility="@{controller.contract != null}"
            />

        <TextView
            android:id="@+id/contract_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/contract_description"
            android:layout_centerInParent="true"
            android:layout_marginTop="7dp"
            android:text="@{controller.contractStatus}"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/contract_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contract_status"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:fontFamily="sans-serif"
            android:text="@{controller.contractDuration}"
            android:textAlignment="center"
            android:textColor="@color/calendarCommonDay"
            android:textSize="17sp"
            android:textStyle="normal"
            android:visibility="@{controller.contract != null}"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:layout_below="@+id/contract_duration"
            android:layout_marginTop="40dp"
            android:background="@android:color/white"
            android:elevation="1dp"
            android:onClick="@{controller.onMyClubClick}"
            android:visibility="@{controller.contract != null}" >
            <ImageView
                android:id="@+id/logo"
                android:layout_width="64dp"
                android:layout_height="32dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_club_logo" />

            <TextView
                android:id="@+id/my_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logo"
                android:layout_marginTop="10dp"
                android:background="@drawable/label_blank"
                android:gravity="center_vertical"
                android:text="@string/clubs_my_club"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="27dp"
                android:fontFamily="sans-serif"
                android:text="@{controller.contractClub.title}"
                android:textColor="@color/calendarCommonDay"
                android:textSize="16sp"
                android:textStyle="normal"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-light"
                android:maxWidth="240dp"
                android:text="@{controller.contractClub.address}"
                android:textColor="@color/calendarCommonDay"
                android:textSize="14sp"
                android:textStyle="normal"
                />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/my_xfit_params"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="328dp"
            android:layout_height="48dp"
            android:layout_above="@+id/suspend_contract"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:background="@drawable/button_bg"
            android:foreground="?attr/selectableItemBackground"
            android:onClick="@{controller.onAchevementsClick}"
            android:orientation="horizontal"
            android:visibility="@{controller.contract != null}">
            <ImageView
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="18dp"
                android:layout_height="20dp"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="10dp"
                android:background="#0000"
                android:clickable="false"
                android:src="@drawable/ic_flag"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:fontFamily="sans-serif"
                android:text="@string/my_xfit_my_params"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/suspend_contract"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="328dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="28dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/button_bg"
            android:foreground="?attr/selectableItemBackground"
            android:onClick="@{controller.onSuspendCardClick}"
            android:orientation="horizontal"
            android:visibility="@{controller.contract != null}">
            <ImageView
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="10dp"
                android:background="#0000"
                android:clickable="false"
                android:src="@drawable/ic_suspend"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:fontFamily="sans-serif"
                android:text="@string/my_xfit_suspend_contract"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/add_club"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="328dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="28dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/button_bg"
            android:foreground="?attr/selectableItemBackground"
            android:onClick="@{controller.linkToClub}"
            android:orientation="horizontal"
            android:visibility="@{controller.contract == null}">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:fontFamily="sans-serif"
                android:text="@string/my_xfit_add_club"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </LinearLayout>

        <include
            layout="@layout/progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@{R.color.loaderBackground}"
            android:indeterminateTint="@{R.color.controlsColor}"
            app:visibility="@{controller.progress}" />
    </RelativeLayout>
</layout>